<section class"row">
	<%= form(url_for(:api_jobs), form_action, {class: "col s12", id: "form", :"data-type" => "modal", :"data-target" => 'response_modal'})%> 
	<% fieldset(:jobs) do |f| %>
		<section class="row">
			<section class="input-field col s6">
				<%= f.label(:name) %>
				<%= f.input(:name,{placeholder:"name", class:"validate"}) %>
			</section>
		</section>
		<section class="row">
			<section class="input-field col s6">
				<%= f.label(:description) %>
				<%= f.textarea(:description,'',{class: "materialize-textarea"})%>
			</section>
			<section class="input-field col s6">
				<%= f.label(:meta_infomation) %>
				<%= f.textarea(:meta_infomation,'',{class: "materialize-textarea"}) %>
			</section>
		</section>

		<section class="row">
			<section class="input-field col s12">
				<%= f.label(:access_key) %>
				<%= f.input(:access_key) %>
			</section>
		</section>
		<section class="row">
			<section class="input-field col s12">
				<%= f.label(:access_secret) %>
				<%= f.input(:access_secret) %>
			</section>
		</section>

		<section class="row">
			<section class="input-field col s6">
				<%= f.label(:base_uri) %>
				<%= f.input(:base_uri) %>
			</section>
			<section class="input-field col s6">
				<%= f.label(:destination) %>
				<%= f.input(:destination) %>
			</section>
		</section>
			<%# impliment array input for :endpoints %>
		<section class="row">
			<section class="input-field col s12">
				<%= f.label(:endpoints) %>
				<%= f.textarea(:endpoints,'',{class: "materialize-textarea"}) %>
			</section>
		</section>
		<section class="row">
			<section class="input-field col s6">
				<%= f.label(:times) %>
				<%= f.input(:times) %>
			</section>
			<section class="input-field col s6">
				<%= f.label(:repetition) %>
				<%= f.select(:repetition, [:second,:minute,:hour,:day,:week,:month]) %>
			</section>
		</section>
		<section class="row">
		<%= submit('Create new job',{class: "waves-effect waves-light btn"}) %>
		</section>
	<% end %>
</section>
<section id="response_modal" class="modal">
	<section class="modal-content">
		<div class="preloader-wrapper big active">
		    <div class="spinner-layer spinner-red-only">
		      <div class="circle-clipper left">
		        <div class="circle"></div>
		      </div><div class="gap-patch">
		        <div class="circle"></div>
		      </div><div class="circle-clipper right">
		        <div class="circle"></div>
		      </div>
		    </div>
  		</div>
	</section>

</section>