<li id="#job" data-jobid="<%= job.id %>">
	<section id="header" class="collapsible-header" > <section><p id="name"><%= job.name %></p><p id="status"><%# j_a?(job.active) %></p></section></section>
	<section  class="collapsible-body">
		<table>
			<thead>
				<tr>
					<th data-field="desc"> 
						Description
					</th>
					<th data-field="meta">
						Meta Infomation	
					</th>
					<th data-field="baseURI">
						Base URL
					</th>
					<th data-field="end">
						Endpoints
					</th>
					<th data-field="dest">
						Destination
					</th>
					<th data-field="reps">
						Repetition
					</th>
				</tr>
			</thead>

			<tbody>
				<tr>
					<td>
						<%= job.description %>
					</td>
					<td>
						<%= job.meta_infomation %>
					</td>
					<td>
						<%= "job.base_uri" %>
					</td>
					<td>
					<ul>
					<% job.endpoints.each do |endpoint| %>
						<li> - <%= endpoint %> </li>
					<% end %>
					</ul> 
					</td>
					<td>
					<%= job.destination %>
					</td>
					<td>
						<%= job.times%> per <%= job.repetition %>
					</td>
				</tr>
			</tbody>
		</table>
	</section>
</li>